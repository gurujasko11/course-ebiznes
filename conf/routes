# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.index
GET         /signOut                         controllers.ApplicationController.signOut
GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)

GET         /signUp                          controllers.SignUpController.view
POST        /signUp                          controllers.SignUpController.submit

GET         /signIn                          controllers.SignInController.view
POST        /signIn                          controllers.SignInController.submit

GET         /totp                            controllers.TotpController.view
GET         /enableTotp                      controllers.TotpController.enableTotp
GET         /disableTotp                     controllers.TotpController.disableTotp
POST        /totpSubmit                      controllers.TotpController.submit
POST        /enableTotpSubmit                controllers.TotpController.enableTotpSubmit

GET         /totpRecovery                    controllers.TotpRecoveryController.view(userID: java.util.UUID, sharedKey: String, rememberMe: Boolean)
POST        /totpRecoverySubmit              controllers.TotpRecoveryController.submit

GET         /password/forgot                 controllers.ForgotPasswordController.view
POST        /password/forgot                 controllers.ForgotPasswordController.submit
GET         /password/reset/:token           controllers.ResetPasswordController.view(token: java.util.UUID)
POST        /password/reset/:token           controllers.ResetPasswordController.submit(token: java.util.UUID)
GET         /password/change                 controllers.ChangePasswordController.view
POST        /password/change                 controllers.ChangePasswordController.submit

GET         /account/email/:email            controllers.ActivateAccountController.send(email: String)
GET         /account/activate/:token         controllers.ActivateAccountController.activate(token: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(file)
->          /webjars                         webjars.Routes

GET           /addresses                   controllers.AddressController.get_addresses
GET           /address/:id                 controllers.AddressController.get_address(id: Long)
POST          /address                     controllers.AddressController.add_address
PUT           /address/:id                 controllers.AddressController.edit_address(id: Long)
DELETE        /address/:id                 controllers.AddressController.delete_address(id: Long)

GET           /users                       controllers.MyUserController.get_users
GET           /user/:id                    controllers.MyUserController.get_user(id: Long)
POST          /user                        controllers.MyUserController.add_user
PUT           /user/:id                    controllers.MyUserController.edit_user(id: Long)
DELETE        /user/:id                    controllers.MyUserController.delete_user(id: Long)

GET           /products                    controllers.ProductController.get_products
GET           /product/:id                 controllers.ProductController.get_product(id: Long)
POST          /product                     controllers.ProductController.add_product
PUT           /product/:id                 controllers.ProductController.edit_product(id: Long)
DELETE        /product/:id                 controllers.ProductController.delete_product(id: Long)

GET           /categories                  controllers.CategoryController.get_categories
GET           /category/:id                controllers.CategoryController.get_category_by_id(id: Long)
POST          /category                    controllers.CategoryController.create
PUT           /category/:id                controllers.CategoryController.edit_category(id: Long)
DELETE        /category/:id                controllers.CategoryController.delete(id: Long)

GET           /orders                      controllers.OrderController.get_orders
GET           /order/:id                   controllers.OrderController.get_order(id: Long)
POST          /order                       controllers.OrderController.add_order
PUT           /order/:id                   controllers.OrderController.edit_order(id: Long)
DELETE        /order/:id                   controllers.OrderController.delete_order(id: Long)

GET           /order_elements             controllers.OrderElementController.get_order_elements
GET           /order_element/:id           controllers.OrderElementController.get_order_element(id: Long)
POST          /order_element               controllers.OrderElementController.add_order_element
PUT           /order_element/:id           controllers.OrderElementController.edit_order_element(id: Long)
DELETE        /order_element/:id           controllers.OrderElementController.delete_order_element(id: Long)